<div class="container">
  <h1>New game</h1>
  <ul class="letters">
    <% @letters.each do |letter| %>
      <li><%= letter.capitalize %></li>
    <% end %>
  </ul>
  <p>What is the longest word you can find?</p>
  <form action="/score" method="post" class="form-inline">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <div class="input-group input-group"></div>
      <input type="text" name="word" class="form-control" value="<%= params[:word] %>" placeholder="What?">
      <span class="input-group-btn">
        <input type="submit" value="Play" class="btn btn-default">
      </span>
    </div>
  </form>
</div>
